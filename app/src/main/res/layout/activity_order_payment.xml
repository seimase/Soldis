<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_contract_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_10"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layout_back"
                android:layout_width="@dimen/space_40"
                android:layout_height="@dimen/space_40"
                android:background="@drawable/selector_row_transparant"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/space_25"
                    android:layout_height="@dimen/space_25"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@color/black" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:layout_weight="1">

                <ui.CustomtextView
                    android:layout_marginLeft="@dimen/space_5"
                    font:name = "Helvetica_Bold"
                    android:textSize="@dimen/space_18"
                    android:gravity="fill"
                    android:textColor="@color/colorBlackEP"
                    android:text="Pembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ui.CustomtextView
                        android:layout_marginLeft="@dimen/space_5"
                        font:name = "Helvetica_Book"
                        android:textSize="@dimen/space_12"
                        android:textColor="@color/colorBlackEP"
                        android:text="Order : "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <ui.CustomtextView
                        font:name = "Helvetica_Medium"
                        android:textColor="@color/blue2"
                        android:id="@+id/text_orderno"
                        android:text="Order Number"
                        android:textSize="@dimen/space_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>



            <RelativeLayout
                android:id="@+id/layout_tgl"
                android:background="@drawable/selector_row_transparant"
                android:layout_width="@dimen/space_100"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_soldis" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:background="@color/grey_s"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/teledokter_lightgreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ui.CustomtextView
            android:layout_margin="@dimen/space_14"
            font:name = "Header"
            android:textSize="@dimen/space_16"
            android:text="TOTAL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ui.CustomtextView
            android:layout_marginBottom="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_14"
            font:name = "Avenir_Book"
            font:type = "bold"
            android:textSize="@dimen/space_40"
            android:id="@+id/txtAmount"
            android:text="Rp 300.000"
            android:textColor="@color/black_ep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/grey_s"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>
    <ui.CustomtextView
        font:name = "Label"
        font:type = "bold"
        android:textSize="@dimen/space_12"
        android:background="@color/grey_sss"
        android:padding="@dimen/space_10"
        android:text="JUMLAH DIBAYAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/grey_s"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ui.CustomtextView
            android:id="@+id/txtUangPas"
            font:name = "Label"
            font:type = "bold"
            android:gravity="center"
            android:textSize="@dimen/space_18"
            android:background="@drawable/btn_shape_all_kotak_blackep"
            android:padding="@dimen/space_16"
            android:textColor="@color/white"
            android:text="Uang Pas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <View
            android:layout_width="@dimen/space_20"
            android:layout_height="1dp"/>

        <ui.CustomtextView
            font:name = "Label"
            font:type = "bold"
            android:id="@+id/txt20"
            android:gravity="center"
            android:textSize="@dimen/space_18"
            android:background="@drawable/btn_shape_all_kotak_blackep"
            android:padding="@dimen/space_16"
            android:textColor="@color/white"
            android:text="20.000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ui.CustomtextView
            android:id="@+id/txt50"
            font:name = "Label"
            font:type = "bold"
            android:gravity="center"
            android:textSize="@dimen/space_18"
            android:background="@drawable/btn_shape_all_kotak_blackep"
            android:padding="@dimen/space_16"
            android:textColor="@color/white"
            android:text="50.000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <View
            android:layout_width="@dimen/space_20"
            android:layout_height="1dp"/>

        <ui.CustomtextView
            android:id="@+id/txt100"
            font:name = "Label"
            font:type = "bold"
            android:gravity="center"
            android:textSize="@dimen/space_18"
            android:background="@drawable/btn_shape_all_kotak_blackep"
            android:padding="@dimen/space_16"
            android:textColor="@color/white"
            android:text="100.000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <ui.CustomEditText
        font:name = "Label"
        android:id="@+id/edtPay"
        android:textSize="@dimen/space_18"
        android:gravity="center"
        android:numeric="integer"
        android:hint="Jumlah Lainnya"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <ui.CustomtextView
        android:id="@+id/txtSave"
        android:background="@color/colorBar"
        font:name = "Helvetica_Book"
        android:gravity="center"
        android:padding="@dimen/space_14"
        android:textSize="@dimen/space_18"
        android:textColor="@color/white"
        android:text="Bayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>