<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_row"
        android:background="@drawable/selector_row"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_marginTop="@dimen/space_10"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <LinearLayout
                            android:layout_marginRight="@dimen/space_14"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ui.CustomtextView
                                font:name = "Helvetica_Book"
                                android:id="@+id/txtPCodeName"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <ui.CustomtextView
                                font:name = "Helvetica_Medium"
                                android:id="@+id/txtPrice"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />




                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginTop="@dimen/space_5"
                            android:layout_gravity="right"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/ll_product_package_info"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <ui.CustomtextView
                                    android:visibility="gone"
                                    font:name = "GOTHAM_BLACK"
                                    android:id="@+id/txtBtnMin"
                                    android:layout_width="@dimen/space_25"
                                    android:layout_height="@dimen/space_25"
                                    android:layout_marginRight="@dimen/space_4"
                                    android:textSize="@dimen/text_medium"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textColor="@color/white"
                                    android:background="@drawable/bg_circle_red"
                                    android:text="-"/>

                                <RelativeLayout
                                    android:background="@drawable/bg_circle_transparant"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/space_40">

                                    <EditText
                                        android:id="@+id/txtQty"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/space_20"
                                        android:gravity="center"
                                        android:editable="false"
                                        android:minWidth="30dp"
                                        android:textSize="@dimen/space_14"
                                        android:background="@drawable/shape_rounded_white"
                                        android:text="1"
                                        android:paddingLeft="@dimen/space_10"
                                        android:paddingRight="@dimen/space_10" />
                                </RelativeLayout>

                                <ui.CustomtextView
                                    android:visibility="gone"
                                    font:name = "GOTHAM_BLACK"
                                    android:id="@+id/txtBtnPlus"
                                    android:layout_width="@dimen/space_25"
                                    android:layout_height="@dimen/space_25"
                                    android:layout_marginLeft="@dimen/space_4"
                                    android:textSize="@dimen/text_medium"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:background="@drawable/bg_circle_red"
                                    android:text="+"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>





        </LinearLayout>

    </LinearLayout>
</RelativeLayout>