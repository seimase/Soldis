<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_contract_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_10"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layout_back"
                android:layout_width="@dimen/space_40"
                android:layout_height="@dimen/space_40"
                android:background="@drawable/selector_row_transparant"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/space_25"
                    android:layout_height="@dimen/space_25"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@color/black" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:layout_weight="1">

                <ui.CustomtextView
                    android:layout_marginLeft="@dimen/space_5"
                    font:name = "Helvetica_Bold"
                    android:textSize="@dimen/space_18"
                    android:gravity="fill"
                    android:textColor="@color/colorBlackEP"
                    android:text="Stok Barang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="@dimen/space_1"
                        android:src="@drawable/calendar"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="match_parent" />

                    <ui.CustomtextView
                        font:name = "Helvetica_Book"
                        android:textSize="@dimen/space_12"
                        android:text="Tanggal : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ui.CustomtextView
                        android:id="@+id/txtTgl"
                        font:name = "Helvetica_Book"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_12"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_tgl"
                android:background="@drawable/selector_row_transparant"
                android:layout_width="@dimen/space_100"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_soldis" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:background="@color/grey_s"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:background="@color/grey_s"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
        android:orientation="vertical"
        android:background="@color/transparant_pure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/space_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <LinearLayout
                            android:id="@+id/layout_sync_product"
                            android:background="@drawable/selector_row"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginLeft="@dimen/space_14"
                                android:layout_gravity="center"
                                android:tint="@color/blue2"
                                android:src="@drawable/sync"
                                android:layout_width="@dimen/space_20"
                                android:layout_height="wrap_content" />

                            <ui.CustomtextView
                                android:gravity="center"
                                android:paddingLeft="@dimen/space_14"
                                android:paddingRight="@dimen/space_14"
                                font:name = "Helvetica_Book"
                                android:text="Produk"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />


                        </LinearLayout>



                        <RelativeLayout
                            android:gravity="right|center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ui.CustomtextView
                                android:id="@+id/txtPembelian"
                                android:background="@drawable/btn_shape_all_gradasi_orange"
                                android:layout_marginRight="@dimen/space_14"
                                font:name = "Helvetica_Book"
                                android:text="Pembelian"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ui.CustomtextView
                            android:paddingTop="@dimen/space_14"
                            android:paddingBottom="@dimen/space_14"
                            font:name = "GOTHAM_MEDIUM"
                            android:text="Total : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/space_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ui.CustomtextView
                            font:name = "GOTHAM_BOLD"
                            android:text="-"
                            android:textColor="@color/red_deep"
                            android:textSize="@dimen/space_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>


                <View
                    android:background="@color/colorLineBar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"/>

                <View
                    android:background="@color/colorLineBar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <RelativeLayout
            android:visibility="gone"
            android:paddingBottom="@dimen/space_14"
            android:background="@color/grey_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/grey_s"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/space_14"
                android:layout_marginRight="@dimen/space_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ui.CustomtextView
                    font:name = "Avenir_Book"
                    android:textColor="@color/red"
                    android:text="Catatan"
                    android:textSize="@dimen/space_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:background="@drawable/btn_shape_all_white_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ui.CustomEditText
                        android:padding="@dimen/space_5"
                        font:name = "GOTHAM_BOOK"
                        android:maxLength="200"
                        android:background="@color/transparant_pure"
                        android:id="@+id/txtRemark"
                        android:textSize="@dimen/space_14"
                        android:digits="0123456789AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz. "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:paddingTop="@dimen/space_20"
            android:paddingBottom="@dimen/space_20"
            android:paddingLeft="@dimen/space_14"
            android:paddingRight="@dimen/space_14"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ui.CustomtextView
                font:name = "Header"
                font:type = "bold"
                android:text="TOTAL"
                android:textColor="@color/black"
                android:textSize="@dimen/space_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ui.CustomtextView
                android:id="@+id/txtTotalPrice"
                android:gravity="right"
                font:name = "Label"
                font:type = "bold"
                android:text="Rp 0"
                android:textSize="@dimen/space_14"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>
    </RelativeLayout>


</LinearLayout>