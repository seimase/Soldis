<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparant_pure"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/btn_shape_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ui.CustomtextView
            font:name = "GOTHAM_BOLD"
            android:textColor="@color/black"
            android:id="@+id/textLabel"
            android:padding="@dimen/space_18"
            android:text="@string/daily_order_periode"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/grey_s"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ui.CustomtextView
            android:id="@+id/txt1Month"
            font:name = "GOTHAM_MEDIUM"
            android:padding="@dimen/space_14"
            android:textSize="@dimen/space_14"
            android:textColor="@color/black"
            android:background="@drawable/selector_row"
            android:text="1 Bulan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/grey_s"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ui.CustomtextView
            android:id="@+id/txt2Month"
            font:name = "GOTHAM_MEDIUM"
            android:padding="@dimen/space_14"
            android:textSize="@dimen/space_14"
            android:textColor="@color/black"
            android:background="@drawable/selector_row"
            android:text="2 Bulan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/grey_s"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ui.CustomtextView
            android:id="@+id/txt3Month"
            font:name = "GOTHAM_MEDIUM"
            android:padding="@dimen/space_14"
            android:textSize="@dimen/space_14"
            android:textColor="@color/black"
            android:background="@drawable/selector_row"
            android:text="3 Bulan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="@dimen/space_5"
            android:id="@+id/layout_kembali"
            android:background="@drawable/btn_shape_dialog_half_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ui.CustomtextView
                android:id="@+id/text_cari"
                font:name = "GOTHAM_BOLD"
                android:textColor="@color/white"
                android:padding="@dimen/space_16"
                android:gravity="center"
                android:text="@string/daily_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>