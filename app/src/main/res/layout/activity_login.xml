<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_shape_purple"
    xmlns:font="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/transparant_pure"
        android:layout_centerHorizontal="true"
        android:layout_weight="1">

        <LinearLayout
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginRight="@dimen/space_20"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_setting"
                android:background="@drawable/selector_row_transparant"
                android:gravity="center"
                android:layout_width="@dimen/space_40"
                android:layout_height="@dimen/space_40">

                <ImageView
                    android:src="@drawable/uff_setting"
                    android:tint="@color/white"
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20" />

            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/circleView"
            android:src="@drawable/logo_soldis"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_100"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:layout_marginTop="@dimen/space_45" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/space_12"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/space_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/circleView"
        android:layout_weight="1">


        <LinearLayout
            android:layout_marginRight="@dimen/space_30"
            android:orientation="vertical"
            android:background="@color/transparant_pure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/layout_edt_username"
                android:drawableLeft="@drawable/gns_user"
                android:background="@drawable/btn_shape_all_kotak_login_header"
                android:clickable="false"
                android:ems="10"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:hint="Username"
                android:layout_below="@+id/circleView">

                <ImageView
                    android:src="@drawable/gns_user"
                    android:tint="@color/colorBar"
                    android:layout_width="@dimen/space_20"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_marginTop="-2dp"
                    android:layout_marginBottom="-2dp" />
                <ui.CustomEditText
                    font:name = "Header"
                    android:id="@+id/edt_username"
                    android:singleLine="true"
                    android:background="@color/transparant_pure"
                    android:textColorHint="@color/colorSearch"
                    android:textSize="@dimen/space_14"
                    android:textColor="@color/colorBar"
                    android:hint="@string/text_user_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_35" />

            </RelativeLayout>

            <View
                android:background="@color/grey_s"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/layout_edt_branch"
                android:drawableLeft="@drawable/gns_user"
                android:background="@drawable/btn_shape_all_kotak_listitem"
                android:clickable="false"
                android:ems="10"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:layout_below="@+id/layout_edt_username">
                <ImageView
                    android:src="@drawable/outlet"
                    android:layout_width="@dimen/space_20"
                    android:tint="@color/colorBar"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_marginBottom="-2dp"
                    android:layout_marginTop="-2dp" />
                <ui.CustomEditText
                    font:name = "Header"
                    android:id="@+id/edt_branch"
                    android:singleLine="true"
                    android:background="@color/transparant_pure"
                    android:textColorHint="@color/colorSearch"
                    android:textSize="@dimen/space_14"
                    android:textColor="@color/colorBar"
                    android:hint="@string/text_branch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numeric="integer"
                    android:layout_marginLeft="@dimen/space_35"/>

            </RelativeLayout>

            <View
                android:background="@color/grey_s"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/layout_edt_password"
                android:drawableLeft="@drawable/gns_user"
                android:background="@drawable/btn_shape_all_kotak_login_footer"
                android:clickable="false"
                android:ems="10"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:layout_below="@+id/layout_edt_username">
                <ImageView
                    android:src="@drawable/gns_lock"
                    android:layout_width="@dimen/space_20"
                    android:tint="@color/colorBar"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_marginBottom="-2dp"
                    android:layout_marginTop="-2dp" />
                <ui.CustomEditText
                    font:name = "Header"
                    android:id="@+id/edt_password"
                    android:singleLine="true"
                    android:background="@color/transparant_pure"
                    android:textColorHint="@color/colorSearch"
                    android:textSize="@dimen/space_14"
                    android:textColor="@color/colorBar"
                    android:hint="@string/text_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_35"
                    android:numeric="integer"
                    android:password="true" />

            </RelativeLayout>

            <ui.CustomtextView
                android:id="@+id/txtUpdate"
                font:name = "Avenir_Book"
                android:textColor="@color/blue2"
                android:textSize="@dimen/space_12"
                android:layout_marginLeft="@dimen/space_14"
                android:layout_marginTop="@dimen/space_10"
                android:text="Check for updates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/space_28"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ui.CustomtextView
                android:id="@+id/btn_login"
                font:name = "Header"
                font:type = "bold"
                android:textColor="@color/white"
                android:textSize="@dimen/space_12"
                android:gravity="center"
                android:text="Masuk"
                android:background="@drawable/selector_row_shape"
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_60" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1">

        <ui.CustomtextView
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginRight="@dimen/space_40"
            android:id="@+id/text_version"
            android:gravity="right"

            font:name="Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/space_12"
            android:text="V."
            android:textColor="@color/black_ep"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/space_20"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ui.CustomtextView
            android:gravity="center"
            font:name = "GOTHAM_BLACK"
            android:textColor="@color/black_ep"
            android:textSize="@dimen/space_30"
            android:layout_width="match_parent"
            android:text="SALES FORCE"
            android:layout_height="wrap_content" />
        <ui.CustomtextView
            android:gravity="center"
            font:name = "GOTHAM_BLACK"
            android:textColor="@color/black_ep"
            android:textSize="@dimen/space_30"
            android:layout_width="match_parent"
            android:text="AUTOMATION"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>