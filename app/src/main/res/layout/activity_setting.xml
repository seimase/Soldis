<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey_sss"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar_master"
        />

    <ui.CustomtextView
        font:name = "GOTHAM_BOLD"
        android:background="@color/white"
        android:textColor="@color/black"
        android:padding="@dimen/space_14"
        android:textSize="@dimen/space_12"
        android:text="@string/setting_sync_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginTop="@dimen/space_14"
        android:layout_marginRight="@dimen/space_7"
        android:layout_marginLeft="@dimen/space_7"
        android:background="@drawable/btn_shape_all_white_5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/selector_row"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginRight="@dimen/space_5"
            android:layout_marginBottom="@dimen/space_5"
            android:id="@+id/layout_sync_toko"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ui.CustomtextView
                    android:id="@+id/text_sync_toko"

                    font:name = "GOTHAM_MEDIUM"
                    android:textColor="@color/black"


                    android:textSize="@dimen/space_12"
                    android:text="@string/setting_sync_outlet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ui.CustomtextView
                    font:name = "GOTHAM_BOOK"
                    android:id="@+id/txtDateSyncOutlet"
                    android:paddingRight="@dimen/space_14"
                    android:text="18-Oct-2017"
                    android:textSize="@dimen/space_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_marginRight="@dimen/space_5"
                android:src="@drawable/sync"
                android:tint="@color/black"
                android:layout_width="@dimen/space_14"
                android:layout_height="match_parent" />


        </LinearLayout>

        <View
            android:background="@color/grey_s"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:background="@drawable/selector_row"
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginRight="@dimen/space_5"
            android:id="@+id/layout_sync_product"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ui.CustomtextView
                    android:id="@+id/text_sync_product"
                    android:background="@drawable/selector_row"
                    font:name = "GOTHAM_MEDIUM"
                    android:textColor="@color/black"

                    android:textSize="@dimen/space_12"
                    android:text="@string/setting_sync_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ui.CustomtextView
                    font:name = "GOTHAM_BOOK"
                    android:id="@+id/txtDateSyncProduct"
                    android:text="18-Oct-2017"
                    android:textSize="@dimen/space_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_marginRight="@dimen/space_5"
                android:src="@drawable/sync"
                android:tint="@color/black"
                android:layout_width="@dimen/space_14"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/space_12"
        android:layout_marginLeft="@dimen/space_7"
        android:layout_marginRight="@dimen/space_7"
        android:background="@drawable/btn_shape_all_white_5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ui.CustomtextView
            android:id="@+id/text_update"
            font:type = "italic"
            android:background="@drawable/selector_row"
            android:padding="@dimen/space_7"
            font:name = "GOTHAM_MEDIUM"
            android:textColor="@color/black"


            android:textSize="@dimen/space_12"
            android:text="@string/setting_check_for_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/space_12"
        android:layout_marginLeft="@dimen/space_7"
        android:layout_marginRight="@dimen/space_10"
        android:background="@drawable/btn_shape_all_white_5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_restore"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ui.CustomtextView
                android:id="@+id/text_restore"
                android:background="@drawable/selector_row"
                android:padding="@dimen/space_7"
                font:name = "GOTHAM_MEDIUM"
                android:textColor="@color/black"
                android:textSize="@dimen/space_12"
                android:text="@string/setting_restore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/img_arrow"
                android:layout_marginRight="@dimen/space_5"
                android:src="@drawable/arrow_up"
                android:layout_width="@dimen/space_20"
                android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_restore_detail"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_marginTop="@dimen/space_5"
                android:background="@color/colorLineBar"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginTop="@dimen/space_7"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ui.CustomtextView
                        android:background="@drawable/selector_row"
                        android:padding="@dimen/space_7"
                        font:name = "GOTHAM_MEDIUM"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_12"
                        android:text="Key : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ui.CustomtextView
                        android:gravity="center"
                        android:layout_marginRight="@dimen/space_10"
                        android:id="@+id/text_key"
                        android:background="@color/grey_s"
                        android:padding="@dimen/space_7"
                        font:name = "GOTHAM_BOLD"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_14"
                        android:text="123123123"
                        android:maxLength="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:background="@color/grey"
                    android:layout_width="1dp"
                    android:layout_marginTop="@dimen/space_3"
                    android:layout_marginBottom="@dimen/space_3"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ui.CustomtextView
                        android:background="@drawable/selector_row"
                        android:padding="@dimen/space_7"
                        font:name = "GOTHAM_MEDIUM"
                        android:textColor="@color/black"
                        android:textSize="@dimen/space_12"
                        android:text="Token : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginRight="@dimen/space_10"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ui.CustomEditText
                            android:id="@+id/edt_token"
                            android:background="@drawable/btn_shape_all_green"
                            android:textColor="@color/white"
                            android:padding="@dimen/space_8"
                            font:name = "GOTHAM_BOLD"
                            android:textSize="@dimen/space_14"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_7"
                android:layout_marginRight="@dimen/space_7"

                android:id="@+id/layout_proses"
                android:background="@drawable/btn_shape_all_blue"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_marginLeft="@dimen/space_3"
                    android:layout_gravity="center"
                    android:src="@drawable/sync"
                    android:tint="@color/white"
                    android:layout_width="@dimen/space_20"
                    android:layout_height="match_parent" />
                <ui.CustomtextView
                    android:paddingRight="@dimen/space_20"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/space_10"
                    font:name = "GOTHAM_MEDIUM"
                    android:textSize="@dimen/space_12"
                    android:text="@string/daily_process"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_admin"
        android:layout_marginTop="@dimen/space_12"
        android:layout_marginLeft="@dimen/space_7"
        android:layout_marginRight="@dimen/space_7"
        android:background="@drawable/btn_shape_all_white_5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_getdata"
            android:background="@drawable/selector_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_7">

            <ui.CustomtextView

                font:name = "GOTHAM_MEDIUM"
                android:textColor="@color/black"
                android:textSize="@dimen/space_12"
                android:text="Get data outlet GPS not found"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ui.CustomtextView
                android:id="@+id/text_total_data"
                font:name = "GOTHAM_MEDIUM"
                android:textColor="@color/black"

                android:textSize="@dimen/space_12"
                android:text="Get "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <View
            android:background="@color/grey_s"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ui.CustomtextView
            android:id="@+id/text_generate"

            android:background="@drawable/selector_row"
            android:padding="@dimen/space_7"
            font:name = "GOTHAM_MEDIUM"
            android:textColor="@color/black"


            android:textSize="@dimen/space_12"
            android:text="Generate Google Maps API"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <View
            android:background="@color/grey_s"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ui.CustomtextView
            android:id="@+id/text_send"
            android:background="@drawable/selector_row"
            android:padding="@dimen/space_7"
            font:name = "GOTHAM_MEDIUM"
            android:textColor="@color/black"


            android:textSize="@dimen/space_12"
            android:text="Send to server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_admin2"
        android:layout_marginTop="@dimen/space_12"
        android:layout_marginLeft="@dimen/space_7"
        android:layout_marginRight="@dimen/space_7"
        android:background="@drawable/btn_shape_all_white_5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ui.CustomtextView
            android:id="@+id/text_admin"
            android:background="@drawable/selector_row"
            android:padding="@dimen/space_7"
            font:name = "GOTHAM_MEDIUM"
            android:textColor="@color/black"


            android:textSize="@dimen/space_12"
            android:text="Admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>


    <ui.CustomtextView
        android:padding="@dimen/space_14"
        font:name = "GOTHAM_MEDIUM"
        android:textColor="@color/black"

        android:textSize="@dimen/space_12"
        android:text="Informasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ui.CustomtextView
        android:layout_marginLeft="@dimen/space_14"
        android:layout_marginRight="@dimen/space_14"
        font:name = "GOTHAM_MEDIUM"
        android:textColor="@color/black"

        android:textSize="@dimen/space_12"
        android:text="1. Sinkronisasi Data Pelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ui.CustomtextView
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_14"
        font:name = "Content"
        android:textSize="@dimen/space_12"
        android:textColor="@color/black"
        android:text="Mengambil master data pelanggan dari server, ini hanya dilakukan sekali saja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ui.CustomtextView
        android:layout_marginLeft="@dimen/space_14"
        android:layout_marginRight="@dimen/space_14"
        font:name = "GOTHAM_MEDIUM"
        android:textColor="@color/black"

        android:textSize="@dimen/space_12"
        android:text="2. Sinkronisasi Data Produk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ui.CustomtextView
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_14"
        font:name = "Content"
        android:textSize="@dimen/space_12"
        android:textColor="@color/black"
        android:text="Mengambil master data pelanggan dari server, ini hanya dilakukan sekali saja/ Jika ada permberitahuan dari pusat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ui.CustomtextView
        android:layout_marginLeft="@dimen/space_14"
        android:layout_marginRight="@dimen/space_14"
        font:name = "GOTHAM_MEDIUM"
        android:textColor="@color/black"

        android:textSize="@dimen/space_12"
        android:text="3. Pembaharuan aplikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ui.CustomtextView
        android:layout_marginLeft="@dimen/space_25"
        android:layout_marginRight="@dimen/space_14"
        font:name = "Content"
        android:textSize="@dimen/space_12"
        android:textColor="@color/black"
        android:text="Mengecek apakah ada aplikasi terbaru atau tidak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>