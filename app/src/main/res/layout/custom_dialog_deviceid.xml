<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/transparant_pure"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:background="@drawable/btn_shape_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_100">

        <ui.CustomtextView
            font:name = "Helvetica_Book"
            android:id="@+id/text_dialog"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14"
            android:gravity="center"
            android:padding="@dimen/space_18"
            android:text="Anda terdaftar di perangkat yang berbeda, apakah anda akan ganti device?"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:background="@drawable/btn_shape_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50">

        <ui.CustomtextView
            android:id="@+id/text_yes"
            font:name = "Helvetica_Medium"
            android:textColor="@color/colorReject"
            android:textSize="@dimen/space_18"
            android:gravity="center"
            android:text="Ya"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginBottom="@dimen/space_5"
            android:background="@color/colorLineBar"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <ui.CustomtextView
            android:id="@+id/text_no"
            font:name = "Helvetica_Medium"
            android:textColor="@color/colorReject"
            android:textSize="@dimen/space_18"
            android:gravity="center"
            android:text="Tidak"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>