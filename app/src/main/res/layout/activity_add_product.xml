<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar_daily_add_customer"
        />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="@dimen/space_14"
                android:layout_marginLeft="@dimen/space_14"
                android:layout_marginRight="@dimen/space_14"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ui.CustomtextView
                        font:name = "GOTHAM_BOOK"
                        android:textSize="@dimen/space_12"
                        android:text="ID Makanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ui.CustomtextView
                        font:name = "GOTHAM_BOOK"
                        android:layout_marginLeft="@dimen/space_5"
                        android:textSize="@dimen/space_12"
                        android:text="*"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <ui.CustomEditText
                    android:id="@+id/edtIdMakanan"
                    android:textColor="@color/black"
                    android:background="@color/transparant_pure"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:digits="0123456789AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz "
                    android:layout_height="wrap_content" />
                <View
                    android:background="@color/grey_s"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/space_14"
                android:layout_marginLeft="@dimen/space_14"
                android:layout_marginRight="@dimen/space_14"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ui.CustomtextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Nama Makanan"
                        android:textSize="@dimen/space_12"
                        font:name="GOTHAM_BOOK" />

                    <ui.CustomtextView
                        font:name = "GOTHAM_BOOK"
                        android:layout_marginLeft="@dimen/space_5"
                        android:textSize="@dimen/space_12"
                        android:text="*"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <ui.CustomEditText
                    android:id="@+id/edtNama"
                    android:textColor="@color/black"
                    android:background="@color/transparant_pure"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@color/grey_s"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/space_14"
                android:layout_marginRight="@dimen/space_14"
                android:layout_marginLeft="@dimen/space_14"
                android:orientation="vertical">

                <ui.CustomtextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori"
                    android:textSize="@dimen/space_12"
                    font:name="Helvetica_Book"/>

                <Spinner
                    android:layout_marginTop="@dimen/space_3"
                    android:id="@+id/spnStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/space_14"
                android:layout_marginLeft="@dimen/space_14"
                android:layout_marginRight="@dimen/space_14"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ui.CustomtextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Harga Jual"
                        android:textSize="@dimen/space_12"
                        font:name="GOTHAM_BOOK" />

                    <ui.CustomtextView
                        font:name = "GOTHAM_BOOK"
                        android:layout_marginLeft="@dimen/space_5"
                        android:textSize="@dimen/space_12"
                        android:text="*"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <ui.CustomEditText
                    android:id="@+id/edtHarga"
                    android:textColor="@color/black"
                    android:background="@color/transparant_pure"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:numeric="integer"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@color/grey_s"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/space_14"
                android:layout_marginLeft="@dimen/space_14"
                android:layout_marginRight="@dimen/space_14"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ui.CustomtextView
                    font:name = "GOTHAM_BOOK"
                    android:textSize="@dimen/space_12"
                    android:text="Photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="@dimen/space_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout

                        android:layout_gravity="center"
                        android:src="@drawable/camera"
                        android:background="@drawable/btn_shape_all_kotak_grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_140"
                        android:layout_weight="1">


                        <ImageView
                            android:layout_margin="2dp"
                            android:padding="@dimen/space_14"
                            android:tint="@color/grey_s"
                            android:src="@drawable/camera"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:layout_margin="@dimen/space_5"
                            android:id="@+id/imgOutlet"
                            android:scaleType="fitXY"
                            android:background="@drawable/selector_row"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/space_14"
                        android:layout_height="match_parent"/>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:src="@drawable/camera"
                        android:background="@drawable/btn_shape_all_kotak_grey"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_140"
                        android:layout_weight="1">


                        <ImageView
                            android:layout_margin="2dp"
                            android:padding="@dimen/space_14"
                            android:tint="@color/grey_s"
                            android:src="@drawable/camera"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:layout_margin="@dimen/space_5"
                            android:scaleType="fitXY"
                            android:id="@+id/imgOutletOptional"
                            android:background="@drawable/selector_row"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/space_7"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ui.CustomtextView
                            font:name = "GOTHAM_BOOK"
                            android:textSize="@dimen/space_12"
                            android:text="@string/addoutlet_front"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ui.CustomtextView
                            android:visibility="gone"
                            font:name = "GOTHAM_BOOK"
                            android:layout_marginLeft="@dimen/space_5"
                            android:textSize="@dimen/space_12"
                            android:text="*"
                            android:textColor="@color/red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:visibility="gone"
                        android:layout_width="@dimen/space_14"
                        android:layout_height="match_parent"/>

                    <ui.CustomtextView
                        android:visibility="gone"
                        android:gravity="center"
                        font:name = "GOTHAM_BOOK"
                        android:textSize="@dimen/space_12"
                        android:text="Makanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:layout_marginTop="@dimen/space_5"
        android:layout_marginRight="@dimen/space_14"
        android:layout_marginLeft="@dimen/space_14"
        android:layout_marginBottom="@dimen/space_5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ui.CustomtextView
            font:name = "GOTHAM_BOOK"
            android:textSize="@dimen/space_12"
            android:text="*"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ui.CustomtextView
            font:name = "GOTHAM_BOOK"
            android:layout_marginLeft="@dimen/space_4"
            android:textColor="@color/black"
            android:textSize="@dimen/space_12"
            android:text="@string/addoutlet_required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>