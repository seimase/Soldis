<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/transparant_pure"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/transparant_pure"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginLeft="@dimen/space_18"
        android:layout_marginRight="@dimen/space_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ui.CustomtextView
            android:background="@drawable/btn_shape_dialog_tambah_header"
            android:id="@+id/textLabel"
            android:text="Informasi"
            android:padding="@dimen/space_14"
            android:textSize="@dimen/space_14"
            android:textColor="@color/white"
            font:name = "Helvetica_Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:background="@drawable/btn_shape_dialog_tambah_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_80">

            <ui.CustomtextView
                font:name = "Helvetica_Book"
                android:id="@+id/text_isi"
                android:textColor="@color/black"
                android:textSize="@dimen/space_14"
                android:padding="@dimen/space_18"
                android:text="Username atau Password Salah, Coba Kembali"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:background="@drawable/btn_shape_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_45">

        <ui.CustomtextView
            android:id="@+id/text_dismiss"
            font:name = "Helvetica_Medium"
            android:textColor="@color/black_ep"
            android:textSize="@dimen/space_18"
            android:gravity="center"
            android:text="Ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</LinearLayout>