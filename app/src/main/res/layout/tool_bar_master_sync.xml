<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBar"
    android:theme="@style/ToolbarStyle"
    android:elevation="2dp"
    tools:ignore="UnusedAttribute">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_margin="@dimen/space_5"
        android:layout_below="@+id/tool_bar">

        <RelativeLayout
            android:id="@+id/layout_sync"
            android:background="@drawable/selector_row_transparant"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/space_40"
            android:layout_height="@dimen/space_40">

            <ImageView
                android:src="@drawable/sync"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20" />


        </RelativeLayout>

        <ui.CustomtextView
            font:name = "Header"
            font:type = "bold"
            android:id="@+id/textLabel"
            android:text="Master Produk"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/space_16"
            android:paddingRight="@dimen/space_30"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/layout_sync"
            android:layout_toLeftOf="@+id/layout_sync" />


    </RelativeLayout>


</android.support.v7.widget.Toolbar>

