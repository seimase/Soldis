<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar_master"/>

    <View
        android:background="@color/colorLineBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginTop="@dimen/space_5"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_14"
        android:layout_marginRight="@dimen/space_14"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/btn_shape_half_blue_selected"
            android:layout_width="@dimen/space_7"
            android:layout_height="match_parent"></RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginLeft="@dimen/space_14"
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ui.CustomtextView
                    font:name = "GOTHAM_MEDIUM"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_12"
                    android:text="@string/daily_outlet_name"
                    android:layout_width="@dimen/space_80"
                    android:layout_height="wrap_content" />

                <ui.CustomtextView

                    font:name = "GOTHAM_MEDIUM"

                    android:textColor="@color/black"
                    android:textSize="@dimen/space_12"
                    android:text=" : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ui.CustomtextView
                    font:name = "GOTHAM_MEDIUM"

                    android:textColor="@color/black"
                    android:id="@+id/text_nama_toko"
                    android:textSize="@dimen/space_12"
                    android:text="Toko Udin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/space_3"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ui.CustomtextView
                    font:name = "GOTHAM_LIGHT"
                    android:textSize="@dimen/space_12"
                    android:text="@string/daily_address"
                    android:layout_width="@dimen/space_80"
                    android:layout_height="wrap_content" />

                <ui.CustomtextView

                    font:name = "GOTHAM_BOOK"
                    android:textSize="@dimen/space_12"
                    android:text=" : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ui.CustomtextView
                    font:name = "GOTHAM_BOOK"
                    android:id="@+id/text_alamat"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_12"
                    android:text="Jl Pedurenan tangerang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ui.CustomtextView
                    font:name = "GOTHAM_LIGHT"
                    android:textSize="@dimen/space_12"
                    android:text="@string/daily_classification"
                    android:layout_width="@dimen/space_80"
                    android:layout_height="wrap_content" />

                <ui.CustomtextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" : "
                    android:textSize="@dimen/space_12"
                    font:name="GOTHAM_BOOK" />

                <ui.CustomtextView
                    font:name = "GOTHAM_BOOK"
                    android:id="@+id/txtTypeName"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_12"
                    android:text="-"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:background="@color/colorLineBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/grey_s"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/space_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ui.CustomtextView
                            android:paddingTop="@dimen/space_14"
                            android:paddingBottom="@dimen/space_14"
                            android:paddingLeft="@dimen/space_14"
                            font:name = "GOTHAM_MEDIUM"
                            android:text="Total SKU : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/space_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ui.CustomtextView
                            font:name = "GOTHAM_BOLD"
                            android:text="-"
                            android:id="@+id/txtTotalSKU"
                            android:textColor="@color/red_deep"
                            android:textSize="@dimen/space_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>


                <View
                    android:background="@color/colorLineBar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"/>

                <View
                    android:background="@color/colorLineBar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <ui.CustomtextView
                    android:id="@+id/txtAddMoreItems"
                    android:background="@drawable/selector_row_new"
                    android:gravity="center"
                    android:padding="@dimen/space_14"
                    font:name = "GOTHAM_MEDIUM"
                    android:text="+ ADD MORE ITEMS"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>




        </android.support.v7.widget.CardView>

    </LinearLayout>


    <ui.CustomtextView
        android:id="@+id/txtSave"
        android:background="@color/Green_chat"
        font:name = "GOTHAM_BLACK"
        android:gravity="center"
        android:padding="@dimen/space_14"
        android:textSize="@dimen/space_16"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:text="@string/daily_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>