<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <View
        android:background="@color/grey_s"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_2"/>
    <LinearLayout
        android:layout_marginTop="@dimen/space_7"
        android:layout_marginLeft="@dimen/space_14"
        android:layout_marginRight="@dimen/space_14"
        android:layout_marginBottom="@dimen/space_7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ui.CustomtextView
            font:name = "GOTHAM_MEDIUM"
            android:text="@string/dash_product"
            android:textSize="@dimen/space_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ui.CustomtextView
            android:layout_marginLeft="@dimen/space_5"
            font:name = "GOTHAM_MEDIUM"
            android:textColor="@color/black"
            android:id="@+id/txtPCode"
            android:text="Paseo SMART 250 GT"
            android:textSize="@dimen/space_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/grey_s"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_marginLeft="@dimen/space_14"
        android:layout_marginRight="@dimen/space_14"
        android:layout_marginTop="@dimen/space_7"
        android:layout_marginBottom="@dimen/space_7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_uom1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ui.CustomtextView
                    font:name = "GOTHAM_MEDIUM"
                    android:text="Total toko hari ini"
                    android:textSize="@dimen/space_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ui.CustomtextView
                    android:layout_marginTop="@dimen/space_3"
                    font:name = "GOTHAM_MEDIUM"
                    android:id="@+id/txtTotalToko"
                    android:text="12"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/space_14"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="@dimen/space_7"
                android:id="@+id/layout_uom1_out"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ui.CustomtextView
                    font:name = "GOTHAM_MEDIUM"
                    android:id="@+id/text_label_uom1_out"
                    android:text="Total toko sampai saat ini"
                    android:textSize="@dimen/space_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ui.CustomtextView
                    font:name = "GOTHAM_MEDIUM"
                    android:layout_marginTop="@dimen/space_3"
                    android:id="@+id/txtTotalTokoMTD"
                    android:text="7"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>